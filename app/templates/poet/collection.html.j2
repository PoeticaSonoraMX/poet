{% extends 'layout/search.html.j2' %}
{% from 'macros/util.html.j2' import render_comments, render_paginator,
    render_copyright, render_recordings, render_entity_ls %}

{% block resultbody %}
    <div class="center-block" style="width: 80%;">
        <h2>{{ _('Series') }}</h2>
        <hr>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div>
                        <h4>{{ _('Title') }}</h4>
                        <h3 class="indented">
                            {{ collection.work_name }}
                        </h3>
                    </div>
                    {{ render_entity_ls('Composers', entities.composers) }}
                    {{ render_entity_ls('Interpreters', entities.interpreters) }}
                    {{ render_entity_ls('Other', entities.others) }}
                    <br>
                    <div>
                        {% if collection.additional_data.giro is defined %}
                            <h4>Giro</h4>
                            <h3 class="indented"> {{ collection.additional_data.giro }}</h3>
                            <br>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-6">
                    {% if collection.image is not none %}
                    <div class="text-center fade-in">
                        <img src="{{ collection.image }}" alt="{{ _('Error while loading photo') }}" height="98%" width="98%">
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <hr>
        {{ render_comments(collection) }}
        {{ render_recordings(works.page) }}
        {{ render_paginator(works.page, '') }}
    </div>
{% endblock %}
