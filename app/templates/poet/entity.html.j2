{% extends 'layout/search.html.j2' %}
{% from 'macros/util.html.j2' import render_comments, render_copyright, render_recordings, render_paginator,
        render_title %}

{% block resultbody %}
    <div class="center-block" style="width: 80%;">
        {{ render_title(user.is_authenticated, admin_link, entity.entity_name) }}
        <hr>
        <div>
            <div class="row">
                <div class="col-md-6">
                    <div>
                        <h3 class="indented">
                            {{ entity.location }}
                        </h3>
                    </div>
                    <div>
                        <h3 class="indented">
                            {{ entity.dates }}
                        </h3>
                    </div>
                </div>
                <div class="col-md-6">
                    {{ render_comments(entity) }}
                </div>
            </div>
        </div>
        <br>
        {{ render_recordings(works.page) }}
        {{ render_paginator(works.page, '') }}
   </div>
{% endblock %}
